<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MobilityDay.Converters;assembly=MobilityDay"
             x:Class="MobilityDay.Views.SessionPage">
  <ContentPage.Resources>
    <ResourceDictionary>
      <converters:NativeSessionDateTimeConverter x:Key="SessionDateTimeConverter"/>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Speakers" Icon="speakers.png" Command="{Binding NavigateToSpeakersCommand}" />
  </ContentPage.ToolbarItems>
  <ScrollView>
    <StackLayout>
      <Label Text="{Binding Session.Title}" FontSize="42" LineBreakMode="TailTruncation"/>
      <Label Text="{Binding Session, Converter={StaticResource SessionDateTimeConverter}, ConverterParameter='Long'}"/>
      <Label Text="{Binding Session.Description}"/>
    </StackLayout>
  </ScrollView>
</ContentPage>